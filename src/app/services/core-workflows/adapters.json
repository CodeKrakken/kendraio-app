{
  "title": "Adapters",
  "blocks": [
    {
      "type": "actions",
      "buttons": [
        {
          "label": "Manage Repositories",
          "color": "link",
          "blocks": [
            {
              "type": "launch",
              "adapter": "core",
              "workflowId": "adapterRepos"
            }
          ]
        },
        {
          "label": "Refresh Adapters",
          "color": "link",
          "blocks": [
            {
              "type": "launch",
              "adapter": "core",
              "workflowId": "updateAdapterList"
            }
          ]
        },
        {
          "label": "Install Adapter",
          "color": "link",
          "blocks": [
            {
              "type": "launch",
              "adapter": "core",
              "workflowId": "searchAdapters"
            }
          ]
        },
        {
          "label": "New Adapter",
          "color": "link",
          "blocks": [
            {
              "type": "launch",
              "adapter": "core",
              "workflowId": "newAdapter"
            }
          ]
        }
      ]
    },
    {
      "type": "adapter-list"
    },
    {
      "type": "grid",
      "gridOptions": {},
      "columnDefs": [
        {
          "headerName": "Adapter",
          "field": "label"
        },
        {
          "headerName": "Version",
          "field": "version"
        },
        {
          "headerName": "Operations",
          "cellRenderer": "workflowRenderer",
          "cellRendererParams": {
            "blocks": [
              {
                "type": "actions",
                "buttons": [
                  {
                    "label": "View",
                    "color": "primary",
                    "blocks": [
                      {
                        "type": "launch",
                        "adapter": "core",
                        "workflowId": "adapterDetails",
                        "context": {
                          "adapterName": "data.adapterName"
                        }
                      }
                    ]
                  },
                  {
                    "label": "Uninstall",
                    "color": "warn",
                    "blocks": [
                      {
                        "type": "dispatch",
                        "action": "uninstallAdapter"
                      },
                      {
                        "type": "dispatch",
                        "action": "refreshWorkflow"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        }
      ]
    }
  ]
}
