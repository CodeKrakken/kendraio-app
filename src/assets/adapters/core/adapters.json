{
  "title": "Adapters",
  "blocks": [
    {
      "type": "mapping",
      "mapping": "context.app.adapters.* | sort_by(@, &adapter.name)"
    },
    {
      "type": "grid",
      "sizeColumnsToFit": false,
      "columnDefs": [
        {
          "headerName": "Title",
          "field": "adapter.title"
        },
        {
          "headerName": "Description",
          "field": "adapter.description"
        },
        {
          "headerName": "Enabled",
          "field": "enabled",
          "valueFormatter": "x ? 'âœ“' : ''"
        },
        {
          "headerName": "Operations",
          "cellRenderer": "workflowRenderer",
          "cellRendererParams": {
            "blocks": [
              {
                "type": "switch",
                "valueGetter": "data.enabled",
                "cases": [
                  {
                    "value": true,
                    "blocks": [
                      {
                        "type": "actions",
                        "buttons": [
                          {
                            "label": "Disable",
                            "blocks": [
                              {
                                "type": "dispatch",
                                "action": "disableAdapter"
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                ],
                "default": {
                  "blocks": [
                    {
                      "type": "actions",
                      "buttons": [
                        {
                          "label": "Enable",
                          "color": "primary",
                          "blocks": [
                            {
                              "type": "dispatch",
                              "action": "enableAdapter"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
