
{
	"title": "PPL recording",
	"description": "Register a recording with PPL.",
	"type": "object",
	"required": [
		"isrc",
		"bandArtist",
		"recordingTitle",
		"contentType",
		"pDate"
	],
	"properties": {
		"isrc": {
			"type": "string",
			"title": "ISRC",
			"minLength": 12,
			"maxLength": 12,
			"default": ""
		},
		"bandArtist": {
			"type": "string",
			"title": "Band/Artist name"
		},
		"recordingTitle": {
			"type": "string",
			"title": "Recording Title"
		},
		"versionType": {
			"type": "string",
			"title": "Version Type",
			"enum": [
				"Album",
				"Alternative",
				"Demo",
				"Edit",
				"Instrumental",
				"Karaoke",
				"Live",
				"Radio edit",
				"Remix",
				"Session"
			]
		},
		"remastered": {
			"type": "boolean",
			"title": "Remastered",
			"description": "This recording is remastered"
		},
		"genre": {
			"type": "string",
			"title": "Genre",
			"enum": [
				"Alternative Rock",
				"Adult contemporary",
				"Bhangra",
				"Blues",
				"Chamber music",
				"Children's music",
				"Christian",
				"Classical",
				"Country",
				"Dance",
				"Easy listening",
				"Erotic",
				"Folk",
				"Gospel",
				"Hip Hop",
				"Jazz",
				"Latin",
				"Middle of the road",
				"Musical (theatre)",
				"New Age",
				"Opera",
				"Operetta",
				"Other",
				"Pop",
				"Rap",
				"Reggae",
				"Religious",
				"Rhythm and Blues",
				"Rock",
				"Rock and Roll",
				"Show",
				"Soul",
				"Sound effects",
				"Spoken word",
				"Unclassified",
				"World music"
			]
		},
		"contentType": {
			"type": "string",
			"title": "Content Type",
			"enum": [
				"Audio",
				"video"
			]
		},
		"pDate": {
			"type": "integer",
			"title": "(P)Date ",
			"description": "This is usually the year in which copies were first issued to the public. If this took place more than 50 years after the recording was made, or if you are unsure, please contact us to clarify.",
			"minLength": 4,
			"maxLength": 4

		},
		"pName": {
			"type": "string",
			"title": "(P)Name ",
			"description": "The name of the original copyright owner of the sound recording as of the (P)Date.",
			"minLength": 4,
			"maxLength": 4

		},
		"recordingCountry": {
			"type": "string",
			"title": "Primary Country of Recording",
			"enum": [
				"United Kingdom",
				"United States",
				"Germany",
				"..needs finishing.."
			]
		},
		"commissioningCountry": {
			"type": "string",
			"title": "Country of Commissioning",
			"enum": [
				"United Kingdom",
				"United States",
				"Germany",
				"..needs finishing.."
			]
		},
		"alternativeTitle": {
			"type": "string",
			"title": "Alternative Title"
		},

		"durationMin": {
			"title": "Duration Min.",
			"type": "integer",
			"minimum": 0,
			"maximum": 999
		},
		"durationSec": {
			"title": "Duration Sec.",
			"type": "integer",
			"minimum": 0,
			"maximum": 59
		},
		"recordingDate": {
			"title": "Recording Date",
			"type": "datepicker"
		},
		"recordingLanguage": {
			"type": "string",
			"title": "Language",
			"enum": [
				"English",
				"Arabic",
				"Bengali",
				"..needs finishing.."
			]
		},
		"firstPublicationCountry": {
			"type": "string",
			"title": "Country of First Publication",
			"enum": [
				"United Kingdom",
				"United States",
				"Germany",
				"..needs finishing.."
			]
		},
		"recordingVenue": {
			"type": "string",
			"title": "Recording Venue "
		},
		"containsExplicitLyrics": {
			"type": "boolean",
			"title": "Explicit",
			"description": "This is an indicator that the recording contains explicit lyrical content."
		},
		"containsSample": {
			"type": "boolean",
			"title": "Sample",
			"description": "This recording contains a Sample"
		},
		"isMedley": {
			"type": "boolean",
			"title": "Medley",
			"description": "The recording is a Medley of more than one individual musical or lyrical works"
		},
		"publisherName": {
			"type": "string",
			"title": "Publisher Name"
		},
		"publisherPercentage": {
			"title": "Publisher Percentage",
			"type": "integer",
			"minimum": 0,
			"maximum": 100
		},
		"featuredPerformersCount": {
			"title": "Number of Featured Performers",
			"description": "The number of unique Contracted and Other Featured performers who have contributed to the recording. Please refer to the PPL Repertoire Style Guide for further information.",
			"type": "integer",
			"minimum": 0,
			"maximum": 100
		},
		"nonFeaturedPerformersCount": {
			"title": "Number of Non Featured Performers",
			"description": "The number of unique Non-Featured performers who have contributed to the recording. Please refer to the PPL Repertoire Style Guide for further information.",
			"type": "integer",
			"minimum": 0,
			"maximum": 100
		},
		"performanceDate": {
			"title": "Date of Performance",
			"type": "datepicker",
			"format": "Recording Date"
		},
		"performanceCountry": {
			"type": "string",
			"title": "Country of Performance",
			"enum": [
				"United Kingdom",
				"United States",
				"Germany",
				"..needs finishing.."
			]
		},
		"featuredPerformerName": {
			"type": "string",
			"title": "Featured Performer Name"
		},
		"featuredPerformerCategory": {
			"type": "string",
			"title": "Featured Performer Category",
			"enum": [
				"Contracted Featured Performer",
				"Other Feature Artist"
			]
		},
		"featuredPerformerRole": {
			"type": "string",
			"title": "Featured Performer Role",
			"enum": [
				"Vocals",
				"Guitar",
				"Keyboards",
				"Drums",
				"Bass Guitar",
				" -- Needs finishing --"
			]
		},
		"featuredPerformerDate": {
			"type": "datepicker",
			"title": "Featured Performer Date of Performance"
		},
		"featuredPerformerCountry": {
			"type": "string",
			"title": "Featured Performer Country of Performance",
			"enum": [
				"United Kingdom",
				"United States",
				"Germany",
				"..needs finishing.."
			]
		},

		"studioPersonnelName": {
			"type": "string",
			"title": "Studio Personnel Name"
		},
		"studioPersonnelCategory": {
			"type": "string",
			"title": "Studio Personnel Category",
			"enum": [
				"Studio Personnel Non-Perf"
			]
		},
		"studioPersonnelRole": {
			"type": "string",
			"title": "Studio Personnel Role",
			"enum": [
				"Producer",
				"Band",
				"Bandleader",
				"Engineer",
				"Remixer",
				" -- Needs finishing --"
			]
		},
		"studioPersonnelrDate": {
			"type": "datepicker",
			"title": "Studio Personnel Date of Performance"
		},
		"studioPersonnelCountry": {
			"type": "string",
			"title": "Studio Personnel Country of Performance",
			"enum": [
				"United Kingdom",
				"United States",
				"Germany",
				"..needs finishing.."
			]
		},
		"composerName": {
			"type": "string",
			"title": "Composer Name"
		},
		"composerCategory": {
			"type": "string",
			"title": "Composers Category",
			"enum": [
				"Composer (musical content)",
				"Author (lyrical content)",
				"Arranger"
			]
		},
		"composerRole": {
			"type": "string",
			"title": "Composers Role",
			"enum": [
				"Arranger",
				"Arranger (Guitar)",
				"Author",
				"Arranger",
				"Composer",
				"Composer, Author, Arranger",
				"..needs finishing.."
			]
		}
	}
}
