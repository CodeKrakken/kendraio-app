{
  "title": "Edit user",
  "blocks": [
    {
      "type": "init"
    },
    {
      "type": "http",
      "method": "get",
      "notify": false,
      "endpoint": {
        "protocol": "https:",
        "host": "bloomen.herokuapp.com",
        "valueGetters": {
          "pathname": "join('', ['/users/', context.queryParams.hash, '/kyc'])"
        }
      },
      "authentication": {
        "type": "bearer",
        "valueGetters": {
          "jwt": "user.profile.bloomenAuth"
        }
      }
    },
    {
      "type": "form",
      "label": "Save",
      "adapter": "bloomen",
      "formId": "user"
    },
    {
      "type": "http",
      "method": "put",
      "notify": true,
      "endpoint": {
        "protocol": "https:",
        "host": "bloomen.herokuapp.com",
        "valueGetters": {
          "pathname": "join('', ['/users/', context.queryParams.hash, '/kyc'])"
        }
      },
      "authentication": {
        "type": "bearer",
        "valueGetters": {
          "jwt": "user.profile.bloomenAuth"
        }
      }
    },
    {
      "type": "launch",
      "adapter": "bloomen",
      "workflowId": "users"
    }
  ]
}
